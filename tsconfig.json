{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": ["ES2020"],
        "outDir": "./lib",
        "rootDir": "./src",
        "strict": true,
        "noImplicitAny": true,
        "removeComments": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "experimentalDecorators": true
    },
    "exclude": ["node_modules", "./dist/", "**/*.spec.ts", "./test/"],
    "typedocOptions": {
        "entryPoints": ["./src/index.ts"],
        "media": "./media",
        "out": "docs",
        "theme": "./template"
    }
}
