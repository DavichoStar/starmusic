{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": ["ES2020"],
        "declaration": false /* Genera el archivo '.d.ts' correspondiente. */,
        "outDir": "./lib",
        "rootDir": "./src",
        "baseUrl": "./src",
        "strict": true,
        /* "sourceMap": true, */
        "noImplicitAny": false /* Cambiar a true */,
        "removeComments": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "experimentalDecorators": true
    },
    "exclude": ["node_modules", "./dist/", "**/*.spec.ts"]
}
